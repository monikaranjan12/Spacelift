provider "aws" {
  region = "ap-south-1"
  # Option 1: Use environment variables (recommended for security)
  # Do NOT hardcode credentials in production
  # access_key = "YOUR_ACCESS_KEY"
  # secret_key = "YOUR_SECRET_KEY"
}
# Create VPC
resource "aws_vpc" "main_vpc" {
  cidr_block           = "10.0.0.0/16"
  enable_dns_support   = true
  enable_dns_hostnames = true
  tags = {
    Name = "MyMainVPC"
  }
}
# Create S3 Bucket
resource "aws_s3_bucket" "my_bucket" {
  bucket = "my-terraform-s3-bucket-0056"
  tags = {
    Name        = "MyS3Bucket"
    Environment = "Dev"
  }
}
# Create Subnet
resource "aws_subnet" "main_subnet" {
  vpc_id                  = aws_vpc.main_vpc.id
  cidr_block              = "10.0.1.0/24"
  availability_zone       = "ap-south-1a"  # You can change this to another AZ if needed
  map_public_ip_on_launch = true

  tags = {
    Name = "MyMainSubnet"
  }
}
